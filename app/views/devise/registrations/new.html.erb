<% provide(:html_title, "新規ユーザ登録") %>
<div class="row">
  <div class="col-12 col-sm-12 col-md-8 col-lg-7 offset-lg-1">
    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <fieldset>
            <% if resource.errors.any? %>
                <div class="form-group">
                  <div class="col-lg-9 col-lg-offset-3 text-danger">
                    <%= "#{resource.errors.count}件のエラーがあります。" %>
                    <% resource.errors.full_messages.each do |msg| %>
                        <span class="help-block"><%= "・#{msg}" %></span>
                    <% end %>
                  </div>
                </div>
            <% end %>
            <div class="col-md-12 form-area">
              <span class="header-text">
                新規ユーザー登録
              </span>
              <div class="form-group">
                <label for="user_username" class="control-label">ユーザー表示名</label>
                <%= f.text_field :username, id: :user_username, class: 'form-control' %>
              </div>

              <div class="form-group">
                <label for="user_email" class="control-label">メールアドレス</label>
                <%= f.email_field :email, id: :user_email, class: 'form-control' %>
              </div>

              <div class="form-group">
                <label for="user_password" class="control-label">パスワード</label>
                <%= f.password_field :password, id: :user_password, autocomplete: "off", class: 'form-control', placeholder: '6文字以上入力してください' %>
              </div>

              <div class="form-group">
                <label for="user_password_confirmation" class="control-label">パスワード(確認)</label>
                <%= f.password_field :password_confirmation, id: :user_password_confirmation, autocomplete: "off", class: 'form-control', placeholder: '再度パスワードを入力してください' %>
              </div>

              <%= f.submit '登録', class: 'btn btn-success btn-block' %>
            </div>
          </fieldset>
      <% end %>
    </div>
  </div>
  <div class="col-12 col-sm-12 col-md-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
