<header>
  <div class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top">
    <div class="container">
      <a href="/" class="navbar-brand"><%= t('app.site_name') %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-main" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse" id="navbar-main">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/games">ゲーム一覧</a>
          </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "https://docs.google.com/forms/d/e/1FAIpQLSfEta48PsfTBTkIx76idPpI7yNzo_HTdg-RknYm1ZxhGh7gWw/viewform", target: "_blank", class: "nav-link" do %>
                <span class="icon-feedback"></span>フィードバック
              <% end %>
            </li>
          <% if user_signed_in? %>
              <li class="nav-item dropdown nav-user-proflie">
                  <a href="#" class="nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                      <div class="ellipsisable-text"><span class="icon-user"></span><%= current_user.username %></div>
                  </a>
                  <ul class="dropdown-menu">
                    <%= render "layouts/user_profile_menu", is_mobile: false %>
                  </ul>
              </li>
              <%= render "layouts/user_profile_menu", is_mobile: true %>
          <% else %>
            <li class="nav-item"><%= link_to 'ゲームを登録', new_game_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'ユーザー登録', new_user_registration_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
