<header>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a href="/" class="navbar-brand">ゲームを実況しよう！</a>
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse" id="navbar-main">
        <ul class="nav navbar-nav">
          <li><a href="/games">ゲーム一覧</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to "https://docs.google.com/forms/d/e/1FAIpQLSfEta48PsfTBTkIx76idPpI7yNzo_HTdg-RknYm1ZxhGh7gWw/viewform", target: "_blank" do %>
                <span class="icon-feedback"></span>フィードバック
              <% end %>
            </li>
          <% if user_signed_in? %>
              <li class="dropdown nav-user-proflie">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                      <div class="ellipsisable-text"><span class="icon-user"></span><%= current_user.username %></div>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'ゲームを登録', new_game_path %></li>
                    <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
                    <li role="separator" class="divider"></li>
                    <li>
                      <%= link_to destroy_user_session_path, method: :delete do %>
                          <span class="icon-signout"></span>ログアウト
                      <% end %>
                    </li>
                  </ul>
              </li>
          <% else %>
            <li><%= link_to 'ゲームを登録', new_game_path %></li>
            <li><%= link_to 'ユーザー登録', new_user_registration_path %></li>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
