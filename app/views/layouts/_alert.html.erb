<% if notice.present? %>
  <div class="alert-area">
    <div class="alert alert-dismissible alert-info">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= notice %>
    </div>
  </div>
<% end %>

<% if alert.present? %>
  <div class="alert-area">
    <div class="alert alert-dismissible alert-danger">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= alert %>
    </div>
  </div>
<% end %>
