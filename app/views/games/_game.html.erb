<!-- Post with featured image -->
<div class="boxed push-down-45">
  <div class="meta">
    <%= image_tag game.icon.url, class: 'game-icon-image' %>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <!-- Start of the content -->
      <div class="post-content--front-page">
        <div class="front-page-title ellipsisable-text">
          <%= link_to game.title, game_path(game) %>
        </div>
        <p>
          <% if game.android_url.present? then %>
              <span class="label label-default">Android</span>
          <% end %>
          <% if game.ios_url.present? then %>
              <span class="label label-default">iOS</span>
          <% end %>
        </p>
      </div>

      <!-- End of the content -->
      <%= link_to game_path(game) do %>
          <div class="read-more">
            詳細
            <div class="read-more__arrow">
              <i class="fa fa-chevron-right"></i>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
